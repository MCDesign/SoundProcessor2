<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="278dp"
        android:layout_height="418dp"
        android:layout_x="-2dp"
        android:layout_y="0dp"
        android:background="@drawable/babymon_4"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/button1"
        android:layout_width="64dp"
        android:layout_height="53dp"
        android:layout_x="171dp"
        android:layout_y="263dp"
        android:background="@drawable/power2"
        android:text="Start" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="82dp"
        android:layout_y="205dp"
        android:text="BabyMonitor"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_x="64dp"
        android:layout_y="154dp"
        android:ems="10"
        android:inputType="phone"
        android:textSize="@dimen/screen_1"
        android:typeface="normal" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="94dp"
        android:layout_y="135dp"
        android:text="MindCast Design"
        tools:context=".MainActivity" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_x="36dp"
        android:layout_y="261dp"
        android:src="@drawable/led_green" />

    <ImageView
        android:id="@+id/ImageView2"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_x="77dp"
        android:layout_y="264dp"
        android:src="@drawable/led_green" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_x="41dp"
        android:layout_y="293dp"
        android:src="@drawable/led_gray" />

    <Button
        android:id="@+id/btb_addr_book"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="27dp"
        android:layout_height="103dp"
        android:layout_x="222dp"
        android:layout_y="133dp"
        android:text="BOOK" />

</AbsoluteLayout>